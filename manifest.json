{
    "manifest_version": 2,

    "name": "marathoBetsExt",
    "version": "1.0",

    "icons": {        
        "128": "128x128.png"
    },

    "permissions": [
             "http://www.marathonbet.com/*",
			  "tabs"
	],
	"background" : {
        "page": "background.html"
    },
	"content_scripts":[{
		"all_frames": true,
		"run_at":"document_end",
        "matches": [
             "http://www.marathonbet.com/*",
            "https://www.marathonbet.com/*"
        ],
        "js": [            
			"js/jquery-2.1.1.js",
			"cross_domain_storage.js",
			"script_in_content.js"
        ]
    }],
    "browser_action": {
        "default_title": "marathonExt",
        "default_icon": "128x128.png"
   }
 }